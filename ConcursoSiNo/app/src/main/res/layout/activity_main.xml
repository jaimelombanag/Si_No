<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:background="@drawable/pregunta_cuadro">


        <TextView
            android:id="@+id/txt_pregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACA VA LA PREGUNTA"
            android:textStyle="bold"
            android:textColor="@color/colorBlanco"
            android:layout_margin="90dp"
            android:textSize="50dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">



        <Button
            android:id="@+id/btn_si"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:background="@drawable/boton_si"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="175dp"
            android:onClick="BotonSi"
            android:layout_marginRight="100dp"/>

        <Button
            android:id="@+id/btn_no"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:background="@drawable/boton_no"
            tools:layout_editor_absoluteX="436dp"
            tools:layout_editor_absoluteY="175dp"
            android:onClick="BotonNo"/>

    </LinearLayout>



</FrameLayout>