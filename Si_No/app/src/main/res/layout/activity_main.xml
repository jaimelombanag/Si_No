<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/pregunta">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">



        <Button
            android:id="@+id/btn_si"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/boton_si"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="175dp"
            android:onClick="BotonSi"
            android:layout_marginRight="100dp"/>

        <Button
            android:id="@+id/btn_no"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/boton_no"
            tools:layout_editor_absoluteX="436dp"
            tools:layout_editor_absoluteY="175dp"
            android:onClick="BotonNo"/>

    </LinearLayout>



</FrameLayout>